<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <solid android:color="@color/ultra_dark_gray"/>
            <size
                android:height="80dp"
                android:width="80dp" />
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:top="0dp"
        android:bottom="1dp">
        <shape android:shape="oval">
            <solid android:color="@color/white"/>
            <size
                android:height="80dp"
                android:width="80dp" />
        </shape>
    </item>
</layer-list>