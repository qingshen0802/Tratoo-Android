<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.tratto.Activity.MainActivity">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        xmlns:font="http://schemas.android.com/apk/res-auto"
        android:background="@color/dark_blue"
        android:id="@+id/relativeLayout4">


        <ImageView
            android:id="@+id/btn_nav_menu"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu" />

        <ImageView
            android:id="@+id/btn_nav_filter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_filter"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/btn_nav_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu_settings"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/btn_nav_search"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:layout_toStartOf="@+id/btn_nav_filter"
            android:src="@drawable/ic_search" />

        <ImageView
            android:id="@+id/btn_nav_upload"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btn_nav_filter"
            android:src="@drawable/ic_menu_upload" />

        <ImageView
            android:id="@+id/btn_nav_camera"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btn_nav_filter"
            android:src="@drawable/ic_menu_camera" />

        <ImageView
            android:id="@+id/btn_nav_add"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/btn_nav_filter"
            app:srcCompat="@drawable/ic_pluse" />

        <ImageView
            android:id="@+id/btn_nav_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/btn_nav_back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btn_nav_menu"
            android:src="@drawable/ic_back" />

        <br.com.tratto.CustomView.FontTextView
            android:id="@+id/text_nav_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/btn_nav_back"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="20sp"
            font:customFont="Roboto_Regular.ttf" />

        <br.com.tratto.CustomView.FontEditText
            android:id="@+id/edt_nav_search"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/text_nav_title"
            android:layout_marginEnd="80dp"
            android:background="@android:color/transparent"
            android:textColor="@color/white"
            android:textSize="20sp"
            font:customFont="Roboto_Regular.ttf"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayout4">
    </RelativeLayout>

</RelativeLayout>
