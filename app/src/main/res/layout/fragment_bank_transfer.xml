<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    tools:context="br.com.tratto.Fragment.Service.LoadMoney.BankTransferFragment">


    <br.com.tratto.CustomView.FontButton
        android:id="@+id/btn_bank_transfer_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/light_blue"
        android:textColor="@color/white"
        android:text="@string/btn_continue"
        android:textAllCaps="false"
        android:textSize="16sp"
        font:customFont="Roboto_Regular.ttf"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_bank_transfer_continue"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/bank_transfer_bank_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView59"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rounded_view"
            android:padding="12dp">

            <ImageView
                android:id="@+id/image_bank_transfer_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                font:srcCompat="@drawable/bank_example" />

            <br.com.tratto.CustomView.FontTextView
                android:id="@+id/text_bank_transfer_cnpj_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView69"
                android:layout_alignBottom="@+id/textView69"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/textView69"
                android:text="08.089.982-100"
                android:textColor="@color/dark_blue"
                font:customFont="Roboto_Regular.ttf" />

            <br.com.tratto.CustomView.FontTextView
                android:id="@+id/textView69"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_bank_transfer_company_value"
                android:layout_marginTop="8dp"
                android:text="CNPJ:"
                android:textColor="@color/dark_blue"
                font:customFont="Roboto_Regular.ttf" />

            <br.com.tratto.CustomView.FontTextView
                android:id="@+id/text_bank_transfer_company_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_bank_transfer_identifier_value"
                android:layout_marginTop="16dp"
                android:text="KCAPT SERVICOS DE PAG. LTDA"
                android:textColor="@color/dark_blue"
                font:customFont="Roboto_Regular.ttf" />

            <br.com.tratto.CustomView.FontTextView
                android:id="@+id/text_bank_transfer_identifier_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView66"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/textView66"
                android:text="0001"
                android:textColor="@color/dark_blue"
                font:customFont="Roboto_Regular.ttf" />

            <br.com.tratto.CustomView.FontTextView
                android:id="@+id/textView66"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_bank_transfer_ag_value"
                android:layout_marginTop="4dp"
                android:text="IDENTIFICADOR:"
                android:textColor="@color/dark_blue"
                font:customFont="Roboto_Regular.ttf" />

            <br.com.tratto.CustomView.FontTextView
                android:id="@+id/text_bank_transfer_cc_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView64"
                android:layout_alignBottom="@+id/textView64"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/textView64"
                android:text="09822-10"
                android:textColor="@color/dark_blue"
                font:customFont="Roboto_Regular.ttf" />

            <br.com.tratto.CustomView.FontTextView
                android:id="@+id/textView64"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/text_bank_transfer_ag_value"
                android:layout_alignBottom="@+id/text_bank_transfer_ag_value"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/text_bank_transfer_ag_value"
                android:text="C/C:"
                android:textColor="@color/dark_blue"
                font:customFont="Roboto_Regular.ttf" />

            <br.com.tratto.CustomView.FontTextView
                android:id="@+id/text_bank_transfer_ag_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView62"
                android:layout_alignBottom="@+id/textView62"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/textView62"
                android:text="0765-3"
                android:textColor="@color/dark_blue"
                font:customFont="Roboto_Regular.ttf" />

            <br.com.tratto.CustomView.FontTextView
                android:id="@+id/textView62"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_bank_transfer_bank_name"
                android:layout_marginTop="12dp"
                android:text="AG:"
                android:textColor="@color/dark_blue"
                font:customFont="Roboto_Regular.ttf" />

            <br.com.tratto.CustomView.FontTextView
                android:id="@+id/text_bank_transfer_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Bradesco"
                android:textColor="@color/dark_blue"
                android:textSize="18sp"
                font:customFont="Roboto_Medium.ttf" />
        </RelativeLayout>

        <br.com.tratto.CustomView.FontTextView
            android:id="@+id/textView60"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_bank_transfer_add_attachment"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="14dp"
            android:text="@string/bank_transfer_attachment_description"
            android:textColor="@color/ultra_dark_blue"
            font:customFont="Roboto_Regular.ttf"/>

        <TextView
            android:id="@+id/textView59"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/spinner_bank_transfer_bank_selector"
            android:layout_centerHorizontal="true"
            android:text=""
            android:background="@color/light_gray"/>

        <br.com.tratto.CustomView.FontButton
            android:id="@+id/btn_bank_transfer_add_attachment"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/imageView16"
            android:background="@android:color/transparent"
            android:text="@string/bank_transfer_attachment"
            android:textAllCaps="false"
            android:textColor="@color/light_blue"
            font:customFont="Roboto_Medium.ttf"/>

        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btn_bank_transfer_add_attachment"
            android:src="@drawable/ic_attachment" />

        <Spinner
            android:id="@+id/spinner_bank_transfer_bank_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView58"
            android:layout_marginTop="8dp"
            android:theme="@style/spinnerStyle" />

        <br.com.tratto.CustomView.FontTextView
            android:id="@+id/textView58"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/bank_transfer_select_bank"
            android:textColor="@color/mid_light_blue"
            android:textSize="14sp"
            font:customFont="Roboto_Regular.ttf"
            android:layout_below="@+id/text_bank_transfer_header"
            android:layout_alignParentStart="true" />

        <br.com.tratto.CustomView.FontTextView
            android:id="@+id/text_bank_transfer_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="@string/bank_transfer_head"
            android:textColor="@color/ultra_dark_blue"
            font:customFont="Roboto_Regular.ttf"/>
    </RelativeLayout>

</RelativeLayout>
