<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    tools:context="br.com.tratto.Fragment.Profile.EditProfileFragment">

    <RelativeLayout
        android:id="@+id/list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="84dp"
        android:background="@color/white">


    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/btn_profile_edit"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignTop="@+id/list_container"
        android:layout_marginStart="24dp"
        android:layout_marginTop="-54dp"
        android:background="@android:color/transparent"
        android:src="@drawable/user_placeholder"
        app:civ_border_color="@color/light_gray"
        app:civ_border_width="1dp"/>


    <ListView
        android:id="@+id/listview_edit_profile_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_profile_edit" />

    <br.com.tratto.CustomView.FontTextView
        android:id="@+id/text_edit_profile_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_profile_edit"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/btn_profile_edit"
        android:text="TextView"
        android:textColor="@color/white"
        android:textSize="18sp"
        font:customFont="Roboto_Regular.ttf" />

    <br.com.tratto.CustomView.FontTextView
        android:id="@+id/text_edit_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/text_edit_profile_full_name"
        android:layout_below="@+id/text_edit_profile_full_name"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textColor="@color/light_gray"
        android:textSize="14sp"
        font:customFont="Roboto_Regular.ttf" />

</RelativeLayout>
