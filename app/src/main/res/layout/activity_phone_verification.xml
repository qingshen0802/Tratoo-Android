<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.tratto.Activity.PhoneVerificationActivity"
    android:background="@drawable/phone_verification_bg">


    <br.com.tratto.CustomView.FontTextView
        android:id="@+id/textView22"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:maxLines="1"
        android:text="@string/phone_verify_head"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="16sp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        font:customFont="Roboto_Regular.ttf"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView13" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/layout_full_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView22"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView22">

        <br.com.tratto.CustomView.FontEditText
            android:id="@+id/text_verify_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:maxLines="1"
            android:paddingStart="84dp"
            android:textColor="@color/white"
            font:customFont="Roboto_Regular.ttf" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="32dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/layout_full_name"
        app:layout_constraintTop_toTopOf="@+id/layout_full_name"
        android:src="@drawable/ic_brazil_flag"
        app:layout_constraintBottom_toBottomOf="@+id/layout_full_name"
        android:layout_marginBottom="0dp" />

    <br.com.tratto.CustomView.FontTextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+55"
        app:layout_constraintTop_toTopOf="@+id/layout_full_name"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/imageView12"
        android:layout_marginLeft="8dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/layout_full_name"
        android:layout_marginBottom="8dp"
        font:customFont="Roboto_Regular.ttf"/>

    <TextView
        android:id="@+id/textView24"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:text=""
        android:background="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@+id/layout_full_name"
        app:layout_constraintLeft_toRightOf="@+id/textView23"
        app:layout_constraintTop_toTopOf="@+id/layout_full_name" />

    <br.com.tratto.CustomView.FontButton
        android:id="@+id/btn_verify_continue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/light_blue"
        android:text="@string/email_login_login_button"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        app:layout_constraintDimensionRatio="w,3:1"
        app:layout_constraintTop_toTopOf="parent"
        font:srcCompat="@drawable/phone_verify_logo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
